@model Rosevale.ViewModels.ResetPasswordFromLoginVM
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(../img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Reset Password</h1>
        </div>
    </div>
</div>
<div class="reset-password-container" style="margin-bottom:100px; margin-top:100px">
    <div asp-validation-summary="ModelOnly" style="color:red"></div>
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Token" />
        <div class="form-group" style="margin-left:90px;margin-bottom:25px;">
            <input asp-for="Email" class="form-control" style="width:35%" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-left:90px;margin-bottom:25px">
            <input asp-for="Password" type="password" style="width:35%" class="form-control" placeholder="New Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-left:90px;margin-bottom:50px">
            <input asp-for="ConfirmPassword" type="password" class="form-control" style="width:35%" placeholder="Confirm New Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="col-3" style="width:20%;margin-left:160px">
            <button class="btn btn-primary w-100 py-3" type="submit">Reset Password</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
