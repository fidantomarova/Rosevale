@model ForgotPasswordVM
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(../img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Forgot Password</h1>
        </div>
    </div>
</div>
<div class="forgot-password-container" style="margin-bottom:100px; margin-top:100px">
    <h1 style="margin-bottom:30px;;display:flex;justify-content:center">Forgot Password</h1>
    <div asp-validation-summary="ModelOnly" style="color:red"></div>
    <form asp-action="ForgotPassword" method="post">
        <div class="form-group" style="margin-bottom:25px;display:flex;justify-content:center">
            <input asp-for="Email" style="width:35%" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-3" style="width:20%;margin-left:530px">
            <button class="btn btn-primary w-100 py-3" type="submit">Send Reset Link</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
