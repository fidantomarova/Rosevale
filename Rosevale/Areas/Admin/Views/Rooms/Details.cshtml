@model Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="~/img/@Model.Image"/>
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Desc
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            Rate
        </dt>
        <dd class = "col-sm-10">
            @Model.Rate
        </dd>
        <dt class = "col-sm-2">
            Bed Count
        </dt>
        <dd class = "col-sm-10">
            @Model.BedCount
        </dd>
        <dt class = "col-sm-2">
            Bath Count
        </dt>
        <dd class = "col-sm-10">
            @Model.BathCount
        </dd>
        <dt class = "col-sm-2">
            Has Wifi
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsWifi)
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info btn-rounded btn-fw">Edit</a>
    <a class="btn btn-secondary btn-rounded btn-fw" asp-action="Index">Back to List</a>
</div>

