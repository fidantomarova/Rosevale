@model List<Room>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <div style="display:flex; justify-content:space-between;align-items:center">
                        <h5 class="card-title">Rooms</h5>
                        <a asp-action="Create" class="btn rounded-pill btn-primary" style="color:white;margin-right:10px;display;flex">Create</a>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Rate
                                </th>
                                <th>
                                    Bed Count
                                </th>
                                <th>
                                    Bath Count
                                </th>
                                <th>
                                    Has Wifi
                                </th>
                                <th style="display:flex; justify-content:end; width:93%">
                                    Actions
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (Room room in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@room.Image" />
                                    </td>
                                    <td>
                                        @if (room.IsDeactive)
                                        {
                                            <span class="text-danger">Passive</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        @room.Name
                                    </td>
                                    <td>
                                        @room.Price$
                                    </td>
                                    <td>
                                        @room.Rate
                                    </td>
                                    <td>
                                        @room.BedCount
                                    </td>
                                    <td>
                                        @room.BathCount
                                    </td>
                                    <td>
                                        @if(room.IsWifi)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                    <td style="display:flex; justify-content:end">

                                        <a asp-action="Edit" asp-route-id="@room.Id" class="btn rounded-pill btn-info" style="color:white;margin-right:10px;display;flex;width:35%">Edit</a>
                                        <a asp-action="Details" asp-route-id="@room.Id" class="btn rounded-pill btn-warning" style="color:white;margin-right:10px;display;flex;width:35%">Details</a>
                                        @if (room.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@room.Id" class="btn rounded-pill btn-success" style="color:white;margin-right:10px;display;flex;width:35%">To Active</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@room.Id" class="btn rounded-pill btn-danger" style="color:white;margin-right:10px;display;flex;width:35%">To Deactive</a>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>


            </div>
        </div>
    </div>
</div>