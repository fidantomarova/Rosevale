@model Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Room Name
        </dt>
        <dd class="col-sm-10">
            @Model.Room.Name
        </dd>
        <dt class="col-sm-2">
            Room Price
        </dt>
        <dd class="col-sm-10">
            @Model.Room.Price
        </dd>
        <dt class="col-sm-2">
            Check In
        </dt>
        <dd class="col-sm-10">
            @Model.CheckIn
        </dd>
        <dt class="col-sm-2">
            Check Out
        </dt>
        <dd class="col-sm-10">
            @Model.CheckOut
        </dd>
        <dt class="col-sm-2">
            Adult Count
        </dt>
        <dd class="col-sm-10">
            @Model.Adults
        </dd>
        <dt class="col-sm-2">
            Child Count
        </dt>
        <dd class="col-sm-10">
            @Model.Children
        </dd>
        <dt class="col-sm-2">
            Special Request
        </dt>
        <dd class="col-sm-10">
            @Model.SpecialRequest
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info btn-rounded btn-fw">Edit</a>
    <a class="btn btn-secondary btn-rounded btn-fw" asp-action="Index">Back to List</a>
</div>

