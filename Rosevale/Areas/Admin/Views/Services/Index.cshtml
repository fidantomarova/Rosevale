@model List<Service>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <div style="display:flex; justify-content:space-between;align-items:center">
                        <h5 class="card-title">Services</h5>
                        <a asp-action="Create" class="btn rounded-pill btn-primary" style="color:white;margin-right:10px;display;flex">Create</a>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Status
                                </th>
                                <th style="display:flex; justify-content:end; width:95%">
                                    Actions
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (Service service in Model)
                            {
                                <tr>
                                    <td>
                                        @service.Title
                                    </td>
                                    <td>
                                        @if (service.IsDeactive)
                                        {
                                            <span class="text-danger">Passive</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                    </td>
                                    <td style="display:flex; justify-content:end">

                                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn rounded-pill btn-info" style="color:white;margin-right:10px;display;flex;width:20%">Edit</a>
                                        <a asp-action="Details" asp-route-id="@service.Id" class="btn rounded-pill btn-warning" style="color:white;margin-right:10px;display;flex;width:20%">Details</a>
                                        @if (service.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@service.Id" class="btn rounded-pill btn-success" style="color:white;margin-right:10px;display;flex;width:20%">To Active</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@service.Id" class="btn rounded-pill btn-danger" style="color:white;margin-right:10px;display;flex;width:20%">To Deactive</a>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>


            </div>
        </div>
    </div>
</div> 