@model About

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>About</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Image1
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Model.Img1" />
        </dd>
        <dt class="col-sm-2">
            Image2
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Model.Img2" />
        </dd>
        <dt class="col-sm-2">
            Image3
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Model.Img3" />
        </dd>
        <dt class="col-sm-2">
            Image4
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Model.Img4" />
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Desc
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info btn-rounded btn-fw">Edit</a>
    <a class="btn btn-secondary btn-rounded btn-fw" asp-action="Index">Back to List</a>
</div>

